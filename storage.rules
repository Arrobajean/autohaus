rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Carpeta de imágenes de coches
    match /cars/{imageId} {
      // Permitir lectura pública (para mostrar en la web)
      allow read: if true;
      
      // Permitir escritura pública (sin restricciones)
      allow write: if true;
      
      // Opcional: Limitar tamaño y tipo de archivo
      // allow write: if request.resource.size < 10 * 1024 * 1024 // 10MB
      //   && request.resource.contentType.matches('image/.*');
    }
    
    // Cualquier otra carpeta (por si necesitas más adelante)
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}

